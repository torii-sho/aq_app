<% if @question.finished? == false then %>
  <div class="answer_form">
      <h2>※コメントを投稿する</h2>
      <%= render 'form2' , answer: @answer %>
      
  </div>
<% end %>


<h2>※　これまで寄せられたコメント</h2>

<% if @question.answers.count == 0 then %>
  <p class="answer"> ※まだコメントはありません。</p>
<% else %>
  <% @question.answers.reverse_each do |re| %>
      <p class="answer" style="border:1px solid gray">
            <%= re.content + '（'  +  re.name + '）            '  + re.created_at.to_s  %>
      </p>
  <% end %>
<% end %>

